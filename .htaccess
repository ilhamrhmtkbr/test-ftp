<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect semua request ke folder public
    RewriteRule ^$ public/ [L]
    RewriteRule ^((?!public/).*)$ public/$1 [L,NC]
</IfModule>

# Security
Options -Indexes
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>